<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/commentTitleBar" android:background="#e5ffffff" android:layout_width="fill_parent" android:layout_height="@dimen/brunch_toolbar_height"
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingRight="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/brunch_toolbar_height">
        <ImageButton
            android:id="@+id/toolbar_cancelButton"
            android:background="@null"
            android:paddingLeft="5.5dip"
            android:layout_width="55.5dip"
            android:layout_height="50.0dip"
            android:src="@drawable/selector_comm_btn_cancel"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:id="@+id/animationLayer"
            android:layout_width="0.0dip"
            android:layout_height="100.0dip"
            android:layout_weight="1.0">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/brunch_toolbar_height">
                <TextView
                    android:text="댓글"
                    android:textSize="16.0dip"
                    android:textStyle="bold"
                    android:textColor="#ff1b1b1b"
                    android:id="@+id/toolbar_titleView"
                    android:paddingTop="@dimen/brunch_toolbar_title_top_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textSize="16.0dip"
                    android:textColor="@color/brunch_mint"
                    android:id="@+id/toolbar_titleCountView"
                    android:paddingTop="@dimen/brunch_toolbar_title_top_padding"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/toolbar_titleView"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:layout_centerVertical="true"
                    android:text="8" />
            </RelativeLayout>
            <LinearLayout android:gravity="center|right" android:id="@+id/toolbar_more_layout" android:paddingBottom="0.5dip" android:layout_width="fill_parent" android:layout_height="@dimen/brunch_toolbar_height">
                <TextView android:textSize="16.0dip" android:textStyle="bold" android:textColor="#ff1b1b1b" android:id="@+id/toolbar_nickname" android:paddingTop="@dimen/brunch_toolbar_title_top_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <ImageButton android:id="@+id/toolbar_write" android:background="@null" android:layout_width="32.0dip" android:layout_height="32.0dip" android:layout_marginRight="14.0dip" android:src="@drawable/selector_editor_btn_write" android:layout_centerVertical="true" />
                <ImageButton android:id="@+id/toolbar_delete" android:background="@null" android:layout_width="32.0dip" android:layout_height="32.0dip" android:layout_marginRight="14.0dip" android:src="@drawable/selector_editor_btn_delete" android:layout_centerVertical="true" />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/toolbar_applyButton"
            android:background="@null"
            android:paddingRight="4.5dip"
            android:layout_width="54.5dip"
            android:layout_height="50.0dip"
            android:src="@drawable/selector_comm_btn_apply"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </LinearLayout>
    <View android:background="@color/editor_top_bar_bottom_divider" android:layout_width="fill_parent" android:layout_height="@dimen/editor_top_bar_bottom_divider_height" android:layout_alignParentBottom="true" />

</LinearLayout>