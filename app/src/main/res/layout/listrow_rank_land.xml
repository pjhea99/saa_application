<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="?tableItemBackground" android:layout_width="fill_parent" android:layout_height="40.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/rank"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
         />
    <View
        android:id="@+id/separator_rank_name"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/rank" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/points"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
         />
    <View android:id="@+id/separator_goal_diff_points"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/points" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/goal_diff"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/separator_goal_diff_points"
         />
    <View android:id="@+id/separator_against_goal_diff"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/goal_diff" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/against"
        
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/separator_against_goal_diff" />
    <View android:id="@+id/separator_for_against"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/against" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/for_"
        
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/separator_for_against" />
    <View android:id="@+id/separator_lost_for"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/for_" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
