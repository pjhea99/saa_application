    <View android:id="@+id/separator_drawn_lost"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/lost" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/drawn"
        
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/separator_drawn_lost"  />
