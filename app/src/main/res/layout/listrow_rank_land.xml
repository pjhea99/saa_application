        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/drawn" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/won"
        
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/separator_won_drawn" />
    <View android:id="@+id/separator_played_won"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/won" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center"
        android:id="@+id/played"
        android:layout_width="50.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/separator_played_won"
