    <View android:id="@+id/separator_name_played"
        android:background="@android:color/white"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/played" />
    <com.grotesque.saa.common.widget.TypefacedTextView
        android:gravity="center_vertical"
        android:id="@+id/name"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:singleLine="true"
        android:layout_toLeftOf="@id/separator_name_played"
        android:layout_toRightOf="@id/separator_rank_name"
         />
</RelativeLayout>